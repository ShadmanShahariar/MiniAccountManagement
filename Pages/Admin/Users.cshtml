@page
@model UsersModel
@{
    ViewData["Title"] = "User Management";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2, h4 {
        text-align: center;
        color: #343a40;
        margin-bottom: 25px;
    }

    form {
        max-width: 600px;
        margin: 0 auto 40px;
        background: #fff;
        padding: 25px 30px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        display: block;
        margin-bottom: 6px;
    }

    input[type="text"],
    input[type="password"],
    select {
        width: 100%;
        padding: 10px 12px;
        font-size: 15px;
        border: 1px solid #ced4da;
        border-radius: 6px;
        transition: border-color 0.3s;
    }

        input[type="text"]:focus,
        input[type="password"]:focus,
        select:focus {
            border-color: #80bdff;
            outline: none;
            box-shadow: 0 0 6px rgba(0,123,255,0.25);
        }

    button.btn-primary {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 8px;
        cursor: pointer;
        background-color: #007bff;
        border: none;
        color: white;
        transition: background-color 0.3s ease;
    }

        button.btn-primary:hover {
            background-color: #0056b3;
        }

    .alert-success {
        max-width: 600px;
        margin: 0 auto 30px;
        padding: 15px 20px;
        border-radius: 8px;
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        font-weight: 600;
        text-align: center;
    }

    table.table {
        max-width: 900px;
        margin: 0 auto 40px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
    }

        table.table thead {
            background-color: #343a40;
            color: white;
        }

        table.table th, table.table td {
            padding: 12px 15px;
            text-align: center;
            border-bottom: 1px solid #dee2e6;
        }

        table.table tbody tr:hover {
            background-color: #f1f3f5;
        }

    .btn-info, .btn-danger {
        font-size: 14px;
        padding: 6px 10px;
        border-radius: 6px;
        margin: 0 3px 3px 0;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
        color: white;
        transition: background-color 0.3s;
    }

        .btn-info:hover {
            background-color: #117a8b;
            color: white;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        transition: background-color 0.3s;
    }

        .btn-danger:hover {
            background-color: #b52a37;
            color: white;
        }

    form[style*="inline"] {
        display: inline-block;
        margin: 0;
    }
</style>

<h2>User Management</h2>

<form method="post" class="mb-4">
    <div class="form-group">
        <label>Email</label>
        <input asp-for="NewUser.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="NewUser.Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label>Role</label>
        <select asp-for="NewUser.Role" class="form-control" asp-items="Model.RoleList"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create User</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">@Model.Message</div>
}

<h4>All Users</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <div class="d-flex gap-1 flex-wrap justify-content-center">
                        @foreach (var role in user.Roles)
                        {
                            <a asp-page="/Security/ModulePermissions"
                               asp-route-roleName="@role"
                               class="btn btn-info btn-sm d-flex align-items-center gap-1"
                               title="Edit @role Permissions">
                                🔒 Edit @role
                            </a>
                        }

                        <form method="post"
                              asp-page-handler="Delete"
                              asp-route-email="@user.Email"
                              onsubmit="return confirm('Are you sure you want to delete this user?');"
                              style="margin: 0;">
                            <button type="submit"
                                    class="btn btn-danger btn-sm d-flex align-items-center gap-1"
                                    title="Delete User">
                                🗑 Delete
                            </button>
                        </form>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
