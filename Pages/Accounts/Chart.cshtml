@page
@model ChartModel
@{
    ViewData["Title"] = "Chart of Accounts";
}

<style>
    body {
        background: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2, h3 {
        color: #333;
    }

    form {
        background-color: #ffffff;
        padding: 25px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        width: 100%;
        max-width: 600px;
    }

        form div {
            margin-bottom: 15px;
        }

    label {
        font-weight: 600;
        display: block;
        margin-bottom: 5px;
        color: #444;
    }

    input[type="text"],
    select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
    }

    button[type="submit"] {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

    hr {
        margin: 40px 0 20px;
    }

    ul {
        list-style-type: none;
        padding-left: 0;
    }

    .toggle-btn {
        display: inline-block;
        width: 16px;
        font-weight: bold;
        cursor: pointer;
        margin-right: 6px;
    }
</style>

<h2>@ViewData["Title"]</h2>

<h3>Chart of Accounts Add</h3>
<form method="post" asp-page-handler="Save">
    <input type="hidden" asp-for="FormModel.Id" />
    <div>
        <label>Account Name</label>
        <input asp-for="FormModel.AccountName" type="text" />
    </div>
    <div>
        <label>Parent</label>
        <select asp-for="FormModel.ParentId" asp-items="Model.ParentAccountList">
            <option value="">-- None --</option>
        </select>
    </div>
    <div>
        <label>Type</label>
        <input asp-for="FormModel.AccountType" type="text" />
    </div>
    <button type="submit">Save</button>
</form>

<hr />
<h3>Chart of Accounts List</h3>
@await Html.PartialAsync("_ListPartial", Model.Accounts)
