@page
@model ChartModel
@{
    ViewData["Title"] = "Chart of Accounts";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-page-handler="Save">
    <input type="hidden" asp-for="FormModel.Id" />
    <div>
        <label>Account Name</label>
        <input asp-for="FormModel.AccountName" />
    </div>
    <div>
        <label>Parent</label>
        <select asp-for="FormModel.ParentId" asp-items="Model.ParentAccountList">
            <option value="">-- None --</option>
        </select>
    </div>
    <div>
        <label>Type</label>
        <input asp-for="FormModel.AccountType" />
    </div>
    <button type="submit">Save</button>
</form>

<hr />
<h3>Account Tree</h3>
@await Html.PartialAsync("_ListPartial", Model.Accounts)

<style>
    ul {
        list-style-type: none;
        padding-left: 0;
    }

    .toggle-btn {
        display: inline-block;
        width: 16px;
        font-weight: bold;
        cursor: pointer;
        margin-right: 4px;
    }
</style>
