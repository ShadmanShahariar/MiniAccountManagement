@page "{roleName}"
@model ModulePermissionsModel
@{
    ViewData["Title"] = "Module Permissions";
}

<h2>Module Permissions for @Model.RoleName</h2>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Module</th>
                <th>Is Allowed</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Permissions.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Permissions[i].ModuleName
                        <input type="hidden" asp-for="Permissions[i].ModuleId" />
                        <input type="hidden" asp-for="Permissions[i].ModuleName" />
                    </td>
                    <td>
                        <input type="checkbox" asp-for="Permissions[i].IsAllowed" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Permissions</button>
</form>

<a asp-page="/Security/UserList">← Back to User Management</a>
