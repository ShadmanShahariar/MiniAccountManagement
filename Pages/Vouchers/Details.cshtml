@page "{id:int}"
@model DetailsModel
@{
    ViewData["Title"] = "Voucher Details";
}

<h2>Voucher Details</h2>

<p><strong>Reference No:</strong> @Model.Voucher.ReferenceNo</p>
<p><strong>Type:</strong> @Model.Voucher.VoucherType</p>
<p><strong>Date:</strong> @Model.Voucher.VoucherDate.ToString("yyyy-MM-dd")</p>
<p><strong>Created By:</strong> @Model.Voucher.CreatedBy</p>

<h4>Entries</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Account</th>
            <th>Debit</th>
            <th>Credit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.Entries)
        {
            <tr>
                <td>@entry.AccountName</td>
                <td>@entry.Debit</td>
                <td>@entry.Credit</td>
            </tr>
        }

    </tbody>
</table>

