@page "{id:int}"
@model DetailsModel
@{
    ViewData["Title"] = "Voucher Details";
}

<style>
    body {
        background-color: #f7f9fc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2, h4 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    form {
        max-width: 950px;
        margin: 20px auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        margin-bottom: 5px;
        display: block;
    }

    input[type="text"],
    input[type="date"],
    select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
    }

    table.table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        table.table th, table.table td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
        }

        table.table thead {
            background-color: #007bff;
            color: #fff;
        }

    button, a.btn {
        margin-top: 20px;
        margin-right: 10px;
        padding: 10px 18px;
        font-size: 16px;
        border-radius: 6px;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #28a745;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 30px;
        font-weight: 600;
    }
</style>

<h2>Voucher Details</h2>

<form method="post">
    <input type="hidden" asp-for="Voucher.Id" />

    <div class="form-group">
        <label>Reference No</label>
        <input asp-for="Voucher.ReferenceNo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Type</label>
        <input asp-for="Voucher.VoucherType" class="form-control" />
    </div>

    <div class="form-group">
        <label>Date</label>
        <input asp-for="Voucher.VoucherDate" type="date" class="form-control" />
    </div>

    <h4>Entries</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Account</th>
                <th>Debit</th>
                <th>Credit</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Entries.Count; i++)
            {
                <tr>
                    <td>
                        <select asp-for="Entries[@i].AccountId" asp-items="Model.AccountSelectList" class="form-control"></select>
                    </td>
                    <td>
                        <input asp-for="Entries[@i].Debit" class="form-control" type="number" step="0.01" />
                    </td>
                    <td>
                        <input asp-for="Entries[@i].Credit" class="form-control" type="number" step="0.01" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary" asp-page-handler="Update">Update</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

<a asp-page="./Index" class="back-link">← Back to List</a>
