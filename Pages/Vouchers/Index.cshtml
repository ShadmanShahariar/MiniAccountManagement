@page
@using MiniAccountManagement.ViewModels;

@model IndexModel
@{
    ViewData["Title"] = "Voucher List";
}

<h2>Voucher List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Reference No</th>
            <th>Type</th>
            <th>Date</th>
            <th>Created By</th>
            <th>Created On</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var voucher in Model.Vouchers)
        {
            <tr>
                <td>@voucher.ReferenceNo</td>
                <td>@voucher.VoucherType</td>
                <td>@voucher.VoucherDate.ToString("yyyy-MM-dd")</td>
                <td>@voucher.CreatedBy</td>
                <td>@voucher.CreatedOn.ToString("g")</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@voucher.Id" class="btn btn-sm btn-info">Details</a>
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@voucher.Id" onsubmit="return confirm('Are you sure you want to delete this voucher?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
