@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = HttpContextAccessor.HttpContext?.User;
    var roles = user?.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).ToList() ?? new List<string>();

    bool isAdmin = roles.Contains("Admin");
    bool isAccountant = roles.Contains("Accountant");
    bool isViewer = roles.Contains("Viewer");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniAccountManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MiniAccountManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="list-group list-group-flush">
            <a asp-page="/Index" class="list-group-item list-group-item-action bg-light">Dashboard</a>
            <partial name="_LoginPartial" />
            @if (isAdmin || isViewer)
            {
                <a asp-page="/Vouchers/Index" class="list-group-item list-group-item-action bg-light">Vouchers</a>
                <a asp-page="/Vouchers/Entry" class="list-group-item list-group-item-action bg-light">New Voucher</a>
                <a asp-page="/Accounts/Chart" class="list-group-item list-group-item-action bg-light">Chart of Accounts</a>
                <a asp-page="/Admin/Users" class="list-group-item list-group-item-action bg-light">User Management</a>
            }
            else if (isAccountant)
            {

                <a asp-page="/Vouchers/Index" class="list-group-item list-group-item-action bg-light">Vouchers</a>
                <a asp-page="/Vouchers/Entry" class="list-group-item list-group-item-action bg-light">New Voucher</a>
            }
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <div class="container-fluid mt-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
